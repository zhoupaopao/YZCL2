<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="vertical"
android:minHeight="180dp"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <View
        android:layout_width="match_parent"
        android:background="@color/page_color"
        android:layout_height="15dp"/>
    <RelativeLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/car_person_name"
            android:layout_centerVertical="true"
            android:text="刘诗诗"/>

        <Button
            android:id="@+id/qxjq"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="取消结清"
            android:layout_alignParentRight="true"
            android:textColor="@color/input_text_color"
            android:layout_centerVertical="true"
            android:background="@drawable/button_radius_jq"/>
    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_weight="1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="车架号："
        android:textSize="13dp"
        android:textColor="@color/car_message_text"
        />
    <TextView
        android:id="@+id/vinid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="122132132132"
        android:textSize="13dp"
        android:textColor="@color/car_message_text"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车辆品牌："
            android:textSize="13dp"
            android:textColor="@color/car_message_text"
            />
        <TextView
            android:id="@+id/equipment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有线（1个）、无线（1个）"
            android:textSize="13dp"
            android:textColor="@color/car_message_text"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结清时间："
            android:textSize="13dp"
            android:textColor="@color/car_message_text"
            />
        <TextView
            android:id="@+id/data_jq_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2012-01-01 01:11"
            android:textSize="13dp"
            android:textColor="@color/car_message_text"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所属客户："
            android:textSize="13dp"
            android:textColor="@color/car_message_text"
            />
        <TextView
            android:id="@+id/belong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="深圳市罗湖大兴4S店面"
            android:textSize="13dp"
            android:textColor="@color/car_message_text"
            />
    </LinearLayout>



</LinearLayout>