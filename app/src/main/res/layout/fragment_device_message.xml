<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_top_radius"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <TextView
            android:id="@+id/device_name_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="Y12345/无线"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/warning_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:background="@color/device_msg"
            android:text="@string/ggyc"/>
        <TextView
            android:id="@+id/dl"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电量10%"
            android:layout_toLeftOf="@id/warning_type"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/waring"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:background="@color/device_msg"
            android:layout_toLeftOf="@id/dl"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:layout_weight="2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_device"/>
        <TextView
            android:id="@+id/online_status"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/device_msg"
            android:text="@string/status_offline"/>
        <TextView
            android:id="@+id/offline_time"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(2天06小时30分)"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:layout_weight="2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_loc_time"/>
        <TextView
            android:id="@+id/last_loc_time"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-01-01 22:00:00"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:layout_weight="2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loc_type"/>
        <TextView
            android:id="@+id/loc_type"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jz_loc"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:layout_weight="5.2">
        <TextView
            android:id="@+id/loc_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最后定位地址:江苏省无锡市锡山区云林街道风味路二号"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:layout_weight="3">
        <TextView
            android:id="@+id/open_colse_loc"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/title_color"
            android:text="@string/close_loc"/>
        <TextView
            android:id="@+id/xfzl"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:textColor="@color/title_color"
            android:text="@string/xfzl"/>
        <TextView
            android:id="@+id/trajectory"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:gravity="center"
            android:textColor="@color/title_color"
            android:layout_height="match_parent"
            android:text="@string/trajectory"/>
        <TextView
            android:id="@+id/navigation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/title_color"
            android:text="@string/navigation"/>
    </LinearLayout>

</LinearLayout>