<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <include layout="@layout/layout_title_car_address"/>
    <com.baidu.mapapi.map.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"></com.baidu.mapapi.map.MapView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/show_time"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@mipmap/rili"/>
            <TextView
                android:id="@+id/choose_time"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-01-02"
                android:textSize="13dp"
                android:textColor="@color/rili"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/layout_left_right_line"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="里程："
                android:textSize="13dp"
                android:textColor="@color/car_message_text"/>
            <TextView
                android:id="@+id/mileage"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22.44Km"
                android:textSize="13dp"
                android:textColor="@color/car_message_text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="停留："
                android:textSize="13dp"
                android:textColor="@color/car_message_text"/>
            <TextView
                android:id="@+id/stop_num"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3次"
                android:textSize="13dp"
                android:textColor="@color/car_message_text"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:background="@color/black"
        android:alpha="0.7">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_weight="2">
            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@mipmap/icon_play"/>
            <ProgressBar
                android:layout_gravity="center_vertical"
                android:max="100"
                android:layout_marginLeft="15dp"
                android:progress="50"
                android:id="@+id/progressBarHorizontal"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!--注：max指最大进度值
                   progress指第一进度值  如：播放进度
                   secondProgress指第二进度值  如：缓冲进度 -->
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017/09/10  00:00:00"
                android:textColor="@color/gj_time"
                android:layout_centerVertical="true"
                android:textSize="10dp"/>
            <TextView
                android:id="@+id/all_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/70.78Km"
                android:textColor="@color/gj_time"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="10dp"/>
            <TextView
                android:id="@+id/now_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/all_number"
                android:text="0.00Km"
                android:textColor="@color/gj_time"
                android:layout_centerVertical="true"
                android:textSize="10dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>