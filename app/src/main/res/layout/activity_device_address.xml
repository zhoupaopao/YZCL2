<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <include layout="@layout/first_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <com.baidu.mapapi.map.MapView
            android:id="@+id/mapview"
            android:layout_below="@id/title_l"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"></com.baidu.mapapi.map.MapView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Y123456-无线"/>
            <TextView
                android:id="@+id/waring_name"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/warning_radius"
                android:textColor="@color/white"
                android:text="光感异常"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/sbzt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备状态："/>
            <TextView
                android:id="@+id/device_status"
                android:layout_toRightOf="@id/sbzt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_offline"/>
            <TextView
                android:id="@+id/device_status_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/device_status"
                android:text="（2天15小时30分）"/>
            <TextView
                android:id="@+id/dl"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/green_dl_radius"
                android:textColor="@color/tv_online"
                android:text="电量80%"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/address_time"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="定位时间：2017-10-20 11:11:11（基站定位）"/>
        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="定位地址：江苏省无锡市锡山区团结路10号，距顾巷上，141米"/>
        <TextView
            android:id="@+id/bind_time"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="绑车时间：2017-10-20 11:11:11"/>
        <TextView
            android:id="@+id/bind_msg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="绑车信息：苗北北 ， L2333333333333333，暂无车牌号"/>
        <TextView
            android:id="@+id/use_age"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="服务期限：2018-09-01~2020-09-01"/>
        <TextView
            android:id="@+id/customer_group"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="所属客户：英臻车联"/>

    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/xfzl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/xfzl"
            android:gravity="center"/>
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@color/divider_line"/>
        <TextView
            android:id="@+id/daohang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="导航"
            android:gravity="center"/>
    </LinearLayout>
    
</LinearLayout> 