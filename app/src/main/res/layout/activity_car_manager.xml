<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <include layout="@layout/search_add_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/white">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="车辆（100）"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/text_car_list"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="设备（100）"
            android:gravity="center"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/allnum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="全部(100)"
            android:clickable="true"/>
        <TextView
            android:id="@+id/numalnum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:text="正常(80)"/>
        <TextView
            android:id="@+id/yuqinumm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:text="逾期(10)"/>
        <TextView
            android:id="@+id/importnum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:text="重点关注(10)"/>



    </LinearLayout>
    <com.andview.refreshview.XRefreshView
        android:id="@+id/custom_view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mylistview"></ListView>
    </com.andview.refreshview.XRefreshView>
    
</LinearLayout> 